# user.py

# Initialize an empty dictionary to store user information
user_info = {}

# Get user input
user_info["name"] = input("What is the user's name? ")
user_info["age"] = int(input("What is the user's age? "))  # Convert age to int
user_info["country_of_birth"] = input("What is the user's country of birth? ")
user_info["known_for"] = input("What is the user known for? ")

# Display user information
print("\nUser Information:")
print("Name:", user_info["name"])
print("Age:", user_info["age"])
print("Country of Birth:", user_info["country_of_birth"])
print("Known For:", user_info["known_for"])
